<%= form_with url: admin_utilities_export_results_csv_path do |f| %>
  <div style="margin-bottom: 12px">
    <%= f.label :date_from, t('admin.utilities.reports.date_from') %>
    <%= f.date_field :date_from, value: 1.year.ago.to_date %>
  </div>
  <div style="margin-bottom: 12px">
    <%= f.label :date_to, t('admin.utilities.reports.date_to') %>
    <%= f.date_field :date_to, value: Date.current %>
  </div>
  <%= f.submit t('admin.utilities.reports.export_button'), data: { confirm: t('admin.utilities.reports.export_confirm') } %>
<% end %>
