<% head_info :description, t('.description') %>

<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <h2><%= head_info :title, t('.title') %></h2>
    <p class="my-3"><span class="fa-li"><i class="fa-solid fa-robot"></i></span>
      <%= t '.registration_html', link: 'https://t.me/sat9am5kmbot' %>
    </p>
    <div class="alert alert-info" role="alert">
      <i class="fa-solid fa-robot"></i>
      <%= t '.telegram_login_html', link: 'https://t.me/sat9am5kmbot' %>
    </div>

    <div class="card mt-4">
      <div class="card-header">
        <h5 class="mb-0"><i class="fa-solid fa-id-card"></i> <%= t('.s95_login_title') %></h5>
      </div>
      <div class="card-body">
        <p class="card-text text-muted"><%= t('.s95_login_description') %></p>
        <%= form_with url: user_session_path, method: :post, local: true do |f| %>
          <div class="mb-3">
            <%= f.label 's95_login[s95_id]', t('.s95_id_label'), class: 'form-label' %>
            <%= f.text_field 's95_login[s95_id]', class: 'form-control', placeholder: t('.s95_id_placeholder'), autocomplete: 'off' %>
          </div>
          <div class="mb-3">
            <%= f.label 's95_login[password]', t('.password_label'), class: 'form-label' %>
            <%= f.password_field 's95_login[password]', class: 'form-control', placeholder: t('.password_placeholder'), autocomplete: 'current-password' %>
          </div>
          <%= f.submit t('.s95_login_button'), class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>

    <% if top_level_domain == :ru %>
      <p class="h5 mt-5"><%= t('.telegram_widget_title') %></p>
      <p><%= t('.telegram_widget_description') %></p>
      <div class="mt-3 text-center">
        <script async src="https://telegram.org/js/telegram-widget.js?22" data-telegram-login="sat9am5kmbot" data-size="large" data-radius="5" data-auth-url="<%= user_telegram_omniauth_callback_url %>" data-request-access="write"></script>
      </div>
    <% end %>
  </div>
</div>
